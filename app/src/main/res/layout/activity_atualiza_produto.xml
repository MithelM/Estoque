<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".AtualizaProdutoActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txtIdProdutoAtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Produto" />

        <EditText
                android:id="@+id/edtIdProdutoAtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="ID Produto" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/txtProdutoAtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produto" />

        <EditText
                android:id="@+id/edtProdutoAtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Produto a ser Atualizado" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/txtQtdAtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qtd_produto" />

        <EditText
                android:id="@+id/edtQtdAtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Digite a quantidade" />

    </LinearLayout>

    <Button
            android:id="@+id/btnSalvarAtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar Alteração"
    />

</LinearLayout>